<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#1b1a1a"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    >

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="@string/chose_you_logo"
        android:textSize="20sp"
        android:textColor="#0e6a60"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:id="@+id/firstUserLayout"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/ghostLogo"
            android:background="@android:color/transparent"
            android:src="@drawable/ghost_user_logo"
            />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/ninjaLogo"
            android:background="@android:color/transparent"
            android:src="@drawable/ninja_user_logo"
            />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/anonymousLogo"
            android:background="@android:color/transparent"
            android:src="@drawable/anonymous_user_logo"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/detectiveLogo"
            android:background="@android:color/transparent"
            android:src="@drawable/detective_user_logo"
            />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/hackerLogo"
            android:layout_marginEnd="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/hacker_user_logo"
            />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/userDefaultLogo"
            android:background="@android:color/transparent"
            android:src="@drawable/user_default_image"
            />

    </LinearLayout>

</LinearLayout>